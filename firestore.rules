rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Podcasts - publicly readable, admin can write
    match /podcasts/{podcastId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Stories - publicly readable (approved only), anyone can submit (pending), admin can approve/reject
    match /stories/{storyId} {
      allow read: if true;
      allow create: if true; // Allow anyone to submit stories
      allow update, delete: if request.auth != null; // Only authenticated users (admin) can update/delete
    }
  }
}
